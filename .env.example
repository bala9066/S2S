# POSTGRESQL DATABASE
# ==========================================
POSTGRES_PASSWORD=hardwarepipeline2026
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=hardware_pipeline
POSTGRES_USER=postgres

# ==========================================
# N8N CONFIGURATION
# ==========================================
N8N_USER=admin
N8N_PASSWORD=admin123
N8N_HOST=localhost
N8N_PORT=5678

# ==========================================
# AI API KEYS (Required)
# ==========================================
# Claude API Key (Get from: https://console.anthropic.com/settings/keys)
CLAUDE_API_KEY=sk-ant-api03-your-key-here

# GLM API Key (Optional - Get from: https://open.bigmodel.cn/)
GLM_API_KEY=your-glm-key-here

# Groq API Key (Optional - Get from: https://console.groq.com/keys)
GROQ_API_KEY=your-groq-key-here

# ==========================================
# AI PROVIDER PREFERENCE
# ==========================================
# Options: 
#   - user_select: User chooses provider for each request
#   - smart_route: Auto-select based on task complexity
AI_PROVIDER_PREFERENCE=user_select

# ==========================================
# PLAYWRIGHT CONFIGURATION
# ==========================================
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# ==========================================
# PGADMIN (Optional)
# ==========================================
PGADMIN_EMAIL=admin@hardwarepipeline.com
PGADMIN_PASSWORD=admin123

# ==========================================
# TIMEZONE
# ==========================================
TZ=Asia/Kolkata
